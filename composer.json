{
  "name": "spoom-php/core",
  "description": "Utility core of the Spoom Packages",
  "keywords": [ "core", "utility", "spoom" ],
  "type": "spoom",
  "license": "MIT",
  "authors": [
    {
      "name": "Nagy Samu"
    }
  ],

  "require": {
    "php": "^7.2.0",
    "ext-mbstring": "*",
    "ext-fileinfo": "*",
    "ext-json": "*",

    "spoom-php/composer": "^1.1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "squizlabs/php_codesniffer": "@stable",
    "phpmd/phpmd": "@stable"
  },

  "autoload": {
    "psr-4": {"Spoom\\Core\\": "src/library/"}
  },
  "autoload-dev": {
    "psr-4": {"Spoom\\Core\\": "test/"}
  }
}
