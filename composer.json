{
  "name": "spoom-php/core",
  "description": "Core extension of the Spoom Framework",
  "keywords": [ "core", "spoom", "framework" ],
  "type": "spoom-extension",
  "license": "MIT",
  "authors": [
    {
      "name": "Nagy Samu"
    }
  ],

  "require": {
    "php": "^7.1.0",
    "spoom-php/composer": "^1.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "squizlabs/php_codesniffer": "@stable",
    "phpmd/phpmd": "@stable"
  },

  "autoload": {
    "psr-4": {"Spoom\\Core\\": "src/extension/"}
  },
  "autoload-dev": {
    "psr-4": {"Spoom\\Core\\": "test/"}
  }
}
