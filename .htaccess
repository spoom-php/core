# Disable ini or json file direct access ( for configuration files )
<FilesMatch "\.(ini|json|xml)$">
  Order allow,deny
</FilesMatch>

# Upload options override
php_value upload_max_filesize 15M
php_value post_max_size 30M

# Rewrite
<IfModule mod_rewrite.c>

  RewriteEngine on
# RewriteBase /

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule .* index.php [L]

</IfModule>